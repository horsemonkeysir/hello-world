<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF3FCAFF" Offset="0.667"/>
                <GradientStop Color="#FF22B9F5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="textBoxSayHello" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="772" Background="White"/>
        <Button x:Name="buttonSayHello" Content="Click Me" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="772" Click="buttonSayHello_Click"/>

    </Grid>
</Window>
